[  --with-p2os                Use the P2OS],
[case "${withval}" in 
 yes) AC_DEFINE(INCLUDE_P2OS, 1, [[include the P2OS driver]])
      ;;
 no) P2OS_LIB=""
     P2OS_LIBPATH=""
