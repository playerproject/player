#!/usr/bin/env python

# NOTE: the "playermap" file is autogenerated from "playermap.in"; make any
# changes there.

import hotshot, hotshot.stats

import sys

from playermap.main import main

# The path to the glade file is inserted during installation
gladepath = "GLADEFILE"

if '-p' in sys.argv:

    prof = hotshot.Profile('.profile')
    prof.run('main(gladepath)')
    prof.close()

    print 'generating profile stats...'

    stats = hotshot.stats.load('.profile')
    stats.strip_dirs()
    stats.sort_stats('time')
    stats.print_stats(20)
    
else:

    main(gladepath)

