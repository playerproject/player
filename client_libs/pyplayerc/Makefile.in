# Variables to be replaced by the configure script.
prefix = @prefix@
exec_prefix = @exec_prefix@
libdir = @libdir@

all:
	python setup.py build

clean:
	python setup.py clean

install:
	python setup.py install --install-platlib=$(libdir)/python

distdir:
	echo 'NOT IMPLEMENTED'

