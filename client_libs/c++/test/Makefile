###########################################################################
# Desc: Make file for the C client lib test program
# Author: Andrew Howard
# Date: 13 May 2002
###########################################################################

include ../../../Makefile.common

TEST = test
OBS = test.o test_gps.o test_position.o test_sonar.o test_misc.o \
      test_laser.o test_ptz.o test_speech.o test_vision.o test_bps.o \
      test_lbd.o test_broadcast.o test_gripper.o

INCLUDES = -I. -I.. -I../../c -I../../../include
CFLAGS += $(INCLUDES)
LFLAGS = -L.. -lplayerclient -lm $(PLATFORM_LIBS)
LIB = ../libplayerclient.a


###########################################################################
# Build section

all: $(TEST)

$(TEST) : $(OBS) $(LIB)
	$(CPP) $(OBS) $(LFLAGS) -o $(TEST)

%.o : %.cc
	$(CPP) $(CFLAGS) -c $< -o $@

dep:
	$(MAKEDEP) $(INCLUDES) -Y -s "# Dependancies (generated by 'make dep')" *.cc 2>/dev/null
	$(RM) -f Makefile.bak

clean_dep:
	$(MAKEDEP) -s "# Dependancies (generated by 'make dep')" 
	$(RM) -f Makefile.bak

clean: clean_dep
	rm -f *~ *.o *.a $(TEST)


# Dependancies (generated by 'make dep')
