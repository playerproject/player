                              irproxy.cc \
                              laserproxy.cc \
                              limbproxy.cc \
                              localizeproxy.cc \
                              logproxy.cc \
                              mapproxy.cc \
                              plannerproxy.cc \
                              position2dproxy.cc \
                              position3dproxy.cc \
                              powerproxy.cc \
                              ptzproxy.cc \
                              simulationproxy.cc \
                              sonarproxy.cc \
