###########################################################################
# Desc: Makefile for libplayerc examples
# Author: Andrew Howard
# Date: 28 May 2002
# CVS: $Id$
###########################################################################

include ../../../Makefile.common

.SUFFIXES: .c .o

###########################################################################
# Options
###########################################################################

EXE = simple
OBS = simple.o

INCLUDES = -I.. -I../../../include
CFLAGS = -g3 -Wall $(INCLUDES)
LFLAGS = -lm -L.. -lplayerc

###########################################################################
# Build section
###########################################################################

all: $(EXE)

$(EXE) : $(OBS)
	$(CC) $(OBS) $(LFLAGS) -o $(EXE)

%.o : %.c
	$(CC) $(CFLAGS) -c $< -o $@

dep:
	$(MAKEDEP) $(INCLUDES) -Y -s "# Dependancies (generated by 'make dep')" *.c 2>/dev/null
	$(RM) -f Makefile.bak

clean_dep:
	$(MAKEDEP) -s "# Dependancies (generated by 'make dep')" 
	$(RM) -f Makefile.bak

clean: clean_dep
	rm -f $(EXE) *~ *.o core




###########################################################################
# Install (to do)
###########################################################################



# Dependancies (generated by 'make dep')
