###########################################################################
# Desc: Make file for the C client lib
# Author: Andrew Howard
# Date: 13 May 2002
# CVS: $Id$
###########################################################################

include ../../Makefile.common

.SUFFIXES: .c .o

LIB = libplayerc.a
OBS = mclient.o client.o device.o error.o \
			dev_position.o dev_laser.o dev_lbd.o \
			dev_vision.o dev_ptz.o dev_broadcast.o \
			dev_bps.o dev_gps.o

INCLUDES = -I. -I../../include
CFLAGS = -g3 -Wall $(INCLUDES)


###########################################################################
# Build section

all: $(LIB)

$(LIB) : $(OBS)
	ar r $(LIB) $(OBS)

%.o : %.c
	$(CC) $(CFLAGS) -c $< -o $@

dep:
	$(MAKEDEP) $(INCLUDES) -Y -s "# Dependancies (generated by 'make dep')" *.c 2>/dev/null
	$(RM) -f Makefile.bak
	cd test && make dep
	cd examples && make dep

clean_dep:
	$(MAKEDEP) -s "# Dependancies (generated by 'make dep')"
	$(RM) -f Makefile.bak
	cd test && make clean_dep
	cd examples && make clean_dep

clean: clean_dep
	rm -f *~ *.o *.a
	cd test && make clean
	cd examples && make clean


# Dependancies (generated by 'make dep')
