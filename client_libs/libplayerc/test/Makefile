###########################################################################
# Desc: Make file for the C client lib test program
# Author: Andrew Howard
# Date: 13 May 2002
###########################################################################

include ../../../Makefile.common

.SUFFIXES: .c .o

TEST = test
OBS = test.o \
			test_bps.o test_broadcast.o test_gps.o test_laser.o \
			test_lbd.o test_position.o test_ptz.o \
			test_sonar.o test_truth.o test_vision.o

INCLUDES = -I. -I.. -I../../../include
CFLAGS = -g3 -Wall $(INCLUDES)
LFLAGS = -L.. -lplayerc -lm


###########################################################################
# Build section

all: $(TEST)

$(TEST) : $(OBS) $(LIB)
	$(CC) $(OBS) $(LFLAGS) -o $(TEST)

%.o : %.c
	$(CC) $(CFLAGS) -c $< -o $@

dep:
	$(MAKEDEP) $(INCLUDES) -Y -s "# Dependancies (generated by 'make dep')" *.c 2>/dev/null
	$(RM) -f Makefile.bak

clean_dep:
	$(MAKEDEP) -s "# Dependancies (generated by 'make dep')"
	$(RM) -f Makefile.bak

clean: clean_dep
	rm -f *~ *.o *.a


# Dependancies (generated by 'make dep')
