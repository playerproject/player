
# Desc: 1 robot with player, laser, sonar and gps
# CVS: $Id$

# the resolution of Stage's raytrace model in meters
#
resolution 0.02
size [5 5]
name "Player driver test"

#test 1

# GUI settings
#
gui
(
  size [ 502.000 506.000 ]
  origin [5.018 4.950 0]
  scale 0.021 # the size of each bitmap pixel in meters
)

# load a bitmapped environment from a file
define background bg
(
  # this object should have a bounding box added
  border "true"

  # this object should not have a direction-indicating nose
  nose "false"
 
  # disable handling of this object with the mouse 
  mouseable "false"

  # a negative number will make this object the maximum
  # possible size in that axis. Here we fill the world
  size [-1 -1]

  # TODO - add origin munging to match the size-munging above
  origin [2.5 2.5 0]

)

background
(
  bitmap "test.pnm" 
  color "purple"
) 


ant
( 
   pose [ 1.360 0.373 -3.887 ]
   size [0.5 0.3]
   bitmap "ant2.pnm"
   color "black"
   nose "false"
)

bug
( 
   pose [ 0.554 0.401 0.198 ]
   size [0.8 0.4]
   bitmap "bug.pnm"
   color "orange"
   nose "false"
   name "orange_bug" # override the default name 
)

sonarbot
(
  size [0.4 0.4]

   ranger_count 8
   ranger[0] [0.1 0.0     0.0 0.02 0.03 0.2 5.0 40.0 0.0 ]
   ranger[1] [0.1 0.1    45.0 0.02 0.03 0.2 5.0 40.0 0.0 ]
   ranger[2] [0.0 0.1    90.0 0.02 0.03 0.2 5.0 40.0 0.0 ]
   ranger[3] [-0.1 0.1  135.0 0.02 0.03 0.2 5.0 40.0 0.0 ]
   ranger[4] [-0.1 0.0  180.0 0.02 0.03 0.2 5.0 40.0 0.0 ]
   ranger[5] [-0.1 -0.1 225.0 0.02 0.03 0.2 5.0 40.0 0.0 ]
   ranger[6] [0.0 -0.1  270.0 0.02 0.03 0.2 5.0 40.0 0.0 ]
   ranger[7] [0.1 -0.1  315.0 0.02 0.03 0.2 5.0 40.0 0.0 ]

   pose [ 0.890 2.686 -1.253 ]

) 

define indicatorlight light
(
  nose "no"
  size [0.02 0.02]
  light "blink"
)

define swarmbot sb
(
  size [0.1 0.1]

  neighbor 1

  indicatorlight( color "red"    pose [0.030 0.000 0.000] light_interval 200) 
  indicatorlight( color "green"  pose [0.000 0.030 0.000] light_interval 400) 
  indicatorlight( color "blue"   pose [-0.030 0.000 0.000] light_interval 600) 
  indicatorlight( color "yellow" pose [0.000 -0.030 0.000] light_interval 800) 
)
	
swarmbot( pose [4.238 3.642 0.154] color "red" )
swarmbot( pose [3.826 3.677 -0.806] color "green"  )
swarmbot( pose [4.119 4.169 0.290] color "blue"  )
swarmbot( pose [3.660 4.350 -1.730] color "magenta" )
