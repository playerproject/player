
# Desc: 1 robot with player, laser, sonar and gps
# CVS: $Id$

# the resolution of Stage's raytrace model in meters
#
resolution 0.02
size [5 5]
name "Player driver test"

#test 1

# GUI settings
#
gui
(
  size [ 502.000 506.000 ]
  origin [5.018 4.950 0]
  scale 0.021 # the size of each bitmap pixel in meters
)

# load a bitmapped environment from a file
define background wall
(
  # this object should have a bounding box added
  border "true"

  # this object should not have a direction-indicating nose
  nose "false"
 
  # disable handling of this object with the mouse 
  mouseable "false"

  # a negative number will make this object the maximum
  # possible size in that axis. Here we fill the world
  size [-1 -1]

  # TODO - add origin munging to match the size-munging above
  origin [2.5 2.5 0]

)

background 
(
  bitmap "test.pnm" 
  color "purple"
) 


bug
( 
   name "bug"
   size [0.8 0.4]
   pose [ 1 0.5 0 ]
   bitmap "bug.pnm"
   color "orange"
   nose "false"
)

sonarbot
(
  size [0.4 0.4]

   name "sonarbot"

   ranger_count 8
   ranger[0] [0.1 0.0     0.0 0.02 0.03 0.2 5.0 40.0 0.0 ]
   ranger[1] [0.1 0.1    45.0 0.02 0.03 0.2 5.0 40.0 0.0 ]
   ranger[2] [0.0 0.1    90.0 0.02 0.03 0.2 5.0 40.0 0.0 ]
   ranger[3] [-0.1 0.1  135.0 0.02 0.03 0.2 5.0 40.0 0.0 ]
   ranger[4] [-0.1 0.0  180.0 0.02 0.03 0.2 5.0 40.0 0.0 ]
   ranger[5] [-0.1 -0.1 225.0 0.02 0.03 0.2 5.0 40.0 0.0 ]
   ranger[6] [0.0 -0.1  270.0 0.02 0.03 0.2 5.0 40.0 0.0 ]
   ranger[7] [0.1 -0.1  315.0 0.02 0.03 0.2 5.0 40.0 0.0 ]

   pose [ 3 3 0 ]

)

define indicatorlight foo
(
  nose "no"
  size [0.02 0.02]
  light "blink"
)

define swarmbot bar
(
  size [0.1 0.1]

  neighbor 1

  indicatorlight( color "red"    pose [0.03 0 0] light_interval 200 ) 
  indicatorlight( color "green"  pose [0 0.03 0] light_interval 400 ) 
  indicatorlight( color "blue"   pose [-0.03 0 0] light_interval 600 ) 
  indicatorlight( color "yellow" pose [0 -0.03 0] light_interval 800 ) 
)

swarmbot( name "swarm1" pose [4 3 0] color "red" )
swarmbot( name "swarm2" pose [4 3.2 0] color "green"  )
swarmbot( name "swarm3" pose [4 3.5 0] color "blue"  )
swarmbot( name "swarm4" pose [4 3.8 0] color "magenta" )